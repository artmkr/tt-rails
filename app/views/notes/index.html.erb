<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.body %></td>
    <td><%= link_to 'Show', [note.project, note] %></td>
    <td><%= link_to 'Edit', edit_project_note_path(note.project, note) %></td>
    <td><%= link_to 'Destroy', [note.project, note], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

