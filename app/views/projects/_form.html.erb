<%= simple_form_for @project, as: 'user_horizontal', html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>
    <legend><%= title %></legend>
    <%= f.input :name, class: "form-control"  %>
    <%= f.input :description, as: :pagedown,input_html: { preview: true, rows: 10 } %>


    <%= f.input :short_description, class: "form-control", hint: 'Short description of your project. Will be in projects list'  %>



    <%= f.input :slack, class: "form-control", hint: "Slack project name" %>


    <%= f.input :trello, class: "form-control", hint: "Trello board name"  %>



    <%= f.input :tag_list, class: "form-control", hint: "Tags separated by comma"  %>

    <%= f.submit class:"btn btn-primary" %>

<% end %>
