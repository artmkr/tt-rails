<h1>Listing Projects 
  <small>
    <span class="btn-group pull-right">
      <%= link_to 'New Project', new_project_path , class: 'btn btn-default'%>
    </span>
  </small>
</h1>



<% @projects.each do |project| %>
  <div class="row">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= project.name %></h3>
        <p><%= project.short_description %></p>
        <p>
          <%= link_to 'Show', project, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-default" %>
          <%= link_to 'Destroy', project, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<br>

